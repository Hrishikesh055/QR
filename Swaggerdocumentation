info:
  title: QR code generator
  version: 1.0.0
servers:
  - url: http://localhost:5000/qrcode
paths:
  /qrcode:
    post:
      security:
        - ApiKeyAuth: []
      requestBody:
        description: contains the url of the website that needs to be embedded in the QR code.
        required: url
        content:
          application/json:
            schema:
              type: string
              required:
                - text
              properties:
                
                url:
                  type: string
                  default: https://www.exponentialhost.com/
                logo_url:
                  type: string
                  default: https://www.adobe.com/express/create/media_127a4cd0c28c2753638768caf8967503d38d01e4c.jpeg?width=400&format=jpeg&optimize=medium
                front_color:
                  type: string
                  default: black
                back_color:
                  type: string
                  default: white
                border_thickness:
                  type: number
                  default: '0'
                border_color:
                  type: string
                  default: black
      description: QR generator API generates customizable QR codes.
      responses:
        '200':
          description: Returns the QR code.
          content:
            application/json:
              schema:
                type: object
                properties:
                  key_words:
                    type: string
                    default: '"\n\n1. Summarization \n2. API \n3. Text Summary \n4. Automated Summarization \n5. Text Compression"'
                  result:
                    type: string
                    default: This API provides a way for a user to create a customized QR code.
        '400':
          description: Returns Error message in case something went wrong
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    default: Something went wrong
components:
  securitySchemes:
    ApiKeyAuth:
      type: apiKey
      in: header
      name: API-key
tags: []
